<%= form_for @post do |f| %>
  <div class="form-control">
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </div>

  <div class="form-control">
    <%= f.label :summary %> <br>
    <%= f.text_area :summary %>
  </div>

  <div class="form-control">
    <%= f.label :body %> <br>
    <%= f.text_area :body %>
  </div> <br>

  <div class="form-control">
      <%= f.submit 'Сохранить' %>
  </div>

<% end %>