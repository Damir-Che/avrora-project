
<%= form_for @post do |f| %>

  <div class="card">
    <div class="card-body">
      <%= f.label      :title %>
      <%= f.text_field :title, class: "form-control" %>

      <%= f.label      :body, class: "mt-3"  %>
      <%= f.text_area :body, class: "form-control" %>

      <%= f.submit 'Сохранить', class: "btn btn-primary mt-4" %>
    </div>
  </div>

<% end %>

