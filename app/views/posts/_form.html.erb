<!--проверка на ошибки валидации в model post-->
<% if @post.errors.any? %>
  <div class="alert alert-danger"> <!--встроенный бутст. класс-->
    <h5><%= t('common.errors') %></h5>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for @post do |f| %>

  <div class="card">
    <div class="card-body">
      <%= f.label      :title %>
      <%= f.text_field :title, class: "form-control" %>

      <%= f.label      :body, class: "mt-3"  %>
      <%= f.text_area :body, class: "form-control" %>

      <%= f.submit 'Сохранить', class: "btn btn-primary mt-4" %>
    </div>
  </div>

<% end %>

