<div class="container">
  <div class="content-show p-2">
    <h1> <%= @post.title %> </h1>
    <p> <%= @post.body %> </p>
  </div>
  <small class="time">
    <%= @post.created_at.to_date.strftime("%d %B,%Y") %>
    <br>
    <%= link_to 'Изменить', edit_post_path(@post) %>
    <%= link_to 'Удалить', post_path(@post), method: :delete, data:{ confirm: 'Вы уверены?'} %>
  </small>


</div>